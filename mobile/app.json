{
  "expo": {
    "name": "Club App",
    "slug": "club-app",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "com.clubapp.ios",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to find nearby venues",
        "NSCameraUsageDescription": "We need camera access for QR code scanning",
        "NSPhotoLibraryUsageDescription": "We need access to your photos for profile pictures"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.clubapp.android",
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Club App to access your location."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Club App to access your camera"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "a1191f3b-9f18-41e8-9d40-6323348de15d"
      }
    },
    "updates": {
      "url": "https://u.expo.dev/YOUR_EAS_PROJECT_ID",
      "enabled": false
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "scheme": "clubapp"
  }
}
